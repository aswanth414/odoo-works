<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_reminder_invoice" model="mail.template">
            <field name="name">Invoice Reminder: Send by email</field>
            <field name="model_id" ref="model_account_move_line"/>
            <field name="subject">Invoice Renewal Remainder for ${object.partner_id.name}</field>
            <field name="email_from">${object.end_customer.email}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="email_cc">${object.get_user_mail()}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        This Email Confirm that ${object.name or 'n/a'} License expires on ${(datetime.date.today()+datetime.timedelta(days=15)).strftime('%B %d, %Y')}
                        <br/>
                        <br/>
                        Customer name :
                        <strong>${object.partner_id.name}</strong>
                        <br/>
                        <br/>
                        Quantity : ${"%.0f" % object.quantity}
                        <br/>
                        <br/>
                        Domain : ${object.domain_ids.domain_ids}
                        <br/>
                        <br/>
                        The License waiting for renewal,you have 15 days time for renew
                        <br/>
                        <br/>
                        Please renew this licence to continue use all services
                        <br/>
                        <br/>
                        RENEW NOW
                        <br/>
                        <br/>
                        <br/>
                        Thank you
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
