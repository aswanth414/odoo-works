<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="ship_form">
        <field name="name">ship.form</field>
        <field name="model">febnoship.ship</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Ship">
                        <field name="ship_name"/>
                        <field name="ship_number"/>
                        <field name="capacity"/>
                        <field name="start_date"/>
                        <field name="duration"/>

                    </group>
                    <notebook>
                        <page string="Quatation" name="quatation">
                            <field name="ship_line_ids">
                                <tree>
                                    <field name="order_line_ids"/>
                                    <field name="order_name"/>
                                    <field name="delivery_date"/>
                                    <field name="expected_date"/>
                                    <field name="customer"/>
                                    <field name="website"/>
                                    <field name="sales_person"/>
                                    <field name="company"/>
                                    <field name="total"/>
                                    <field name="invoice"/>
                                </tree>

                            </field>
                        </page>
                        <page string="Order">

                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

      <!-- calendar view -->
       <record model="ir.ui.view" id="ship_calendar_view">
           <field name="name">ship.calendar</field>
           <field name="model">febnoship.ship</field>
           <field name="arch" type="xml">
                <calendar string="Ship Calendar" date_start="start_date" date_stop="end_date" color="duration">

                    <field name="ship_name"/>

                </calendar>
           </field>
       </record>


      <record model="ir.ui.view" id="ship_graph_view">
         <field name="name">ship.graph</field>
         <field name="model">febnoship.ship</field>
         <field name="arch" type="xml">
             <graph string="ships graph">
                <field name="ship_name"/>
                 <field name="duration" type="measure"/>
             </graph>
         </field>
      </record>


    <record model="ir.ui.view" id="ship_tree_view">
        <field name="name">ship.tree</field>
        <field name="model">febnoship.ship</field>

        <field name="arch" type="xml">
            <tree>
                <field name="ship_name"/>
                <field name="ship_number"/>
                <field name="capacity"/>
                <field name="start_date"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="action_arraival" model="ir.actions.act_window">
        <field name="name">Ship</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">febnoship.ship</field>
        <field name="view_mode">tree,form,calendar,graph</field>

    </record>


    <menuitem id="ship_menu" name="ship" parent="sale.sale_order_menu" action="action_arraival" sequence="4"/>

</odoo>